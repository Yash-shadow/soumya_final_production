# Database Configuration (PostgreSQL URL)
DATABASE_URL=postgres://user:password@hostname:5432/dbname

# File Storage Path (For Media/Uploads)
MEDIA_ROOT=/path/to/media/storage

# Security Settings
DEBUG=False
SECRET_KEY=change-me-in-prod-with-random-string

# Allowed Hosts & CSRF (Comma separated)
ALLOWED_HOSTS=yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com
